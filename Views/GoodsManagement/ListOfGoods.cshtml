@model List<ranglerz_project.Models.Good>
@{
    ViewBag.Title = "ViewGoods";
    int addGoods  = Convert.ToInt32 (Session["add_goods"]);
    int editGoods = Convert.ToInt32 (Session["edit_goods"]);
    int deleteGoods = Convert.ToInt32(Session["delete_goods"]);
    int unitRate = Convert.ToInt32(Session["add_unitRate"]);
    int productionCarbon= Convert.ToInt32(Session["productionCarbon"]);
    int productionBleach = Convert.ToInt32(Session["productionBleach"]);
    int productionFat = Convert.ToInt32(Session["productionFat"]);
}







    <div class="container body">


        <div class="main_container">

            @{
                Html.RenderPartial("_Partial");
            }

            <!-- top navigation -->
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col col-md-10 pull-right " role="main">
                <div class="">
                    <div class="page-title">
                        <div class="title_left">
                            <h3>
                                Goods Management
                            </h3>
                        </div>


                    </div>
                    <div class="clearfix"></div>

                    <div class="row">

                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="x_panel">
                                <div class="x_title">
                                    <h2>View Goods</h2>
                                    <div class="clearfix"></div>
                                </div>


                                <div class="x_content">

                                    <table id="example" class="table table-striped responsive-utilities jambo_table">
                                        <thead>
                                            <tr class="headings">

                                                <th>Name </th>
                                                <th>Unit</th>
                                                <th>Type </th>
                                                <th>Transaction Account</th>
                                                <th>Action</th>



                                            </tr>
                                        </thead>
                                        <form action="@Url.Action("Create","GoodsManagement")" method="get">

                                            @foreach (var v in Model)
                                            {


                                                <tbody>



                                                    <tr class="even pointer">

                                                        <td>@v.good_Name</td>
                                                        <td>@v.unit</td>
                                                        <td>@v.good_Type</td>
                                                        <td>@v.TransactionAccount.name</td>
                                                        <td>

                                                        @if(editGoods == 1)
                                                        { 
                                                        
                                                        <a href="~/GoodsManagement/Edit/@v.Id">Edit</a>
                                                        }
                                                        
                                                        @if(deleteGoods == 1)
                                                        { 
                                                            <a href="~/GoodsManagement/Delete/@v.Id" onclick="return confirm('Are you sure you want to Delete?')">Delete</a>
                                                        }
                                                            </td>
                                                    
                                                            </tr>

                                                </tbody>


                                            }
                                           
                
                                            <td>
                                            @if(addGoods ==1)
                                            {
                                            <input class="btn btn-success" type="submit" value="Add new" />
                                            }
                                            </td>

                                            <td>

                                            @if(unitRate ==1)
                                            { 
                                             <a href="~/SaleVoucher/unitRate/" class="btn btn-success">Add Unit Rate</a> 
                                            }
                                            </td>

                                            <td>
                                             @if(productionFat ==1)
                                             { 
                                            <a href="~/GoodsManagement/DateRange/1" class="btn btn-success">Add Production Protien/FatOIL </a>
                                             }
                                             </td>
                                            <td>
                                                @if(productionCarbon ==1)
                                                { 
                                            <a href="~/GoodsManagement/DateRange/2" class="btn btn-success">Add Production tyre Oil/Carbon </a>
                                                }
                                            </td>
                                            <td>
                                                @if(productionBleach ==1)
                                                { 
                                            <a href="~/GoodsManagement/DateRange/3" class="btn btn-success">Add Production Bleach Oil/FatAcid </a>
                                            
                                                }
                                               
                                                </td>

                                        </form>
                                    </table>

                                </div>


                            </div>
                        </div>

                        <br />
                        <br />
                        <br />

                    </div>
                    <br />
                    <br />

                </div>

            </div>
            <!-- /page content -->
        </div>

    </div>
    <script src="~/Scripts/js/bootstrap.min.js"></script>

    <script src="~/Scripts/js/custom.js"></script>

    <script type="text/javascript">
        function confirm_delete() {
            return confirm('are you sure?');
        }
    </script>


