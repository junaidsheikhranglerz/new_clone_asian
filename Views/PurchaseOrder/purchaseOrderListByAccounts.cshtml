@model List<ranglerz_project.Models.Purchase_Order>




























<div class="row">

    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Purchase Orders</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="example" class="table table-striped responsive-utilities jambo_table">
                    <thead>
                        <tr class="headings">

                            <th>Date</th>
                            <th>PO# </th>
                            <th>Party Name </th>
                            <th>Item </th>
                            <th>Broker</th>
                            <th>Commision</th>
                            <th>Weight</th>
                            <td>Rate</td>
                            <td>Prepared By</td>
                            <td>Approved By</td>
                            <th>Status</th>
                            @*<th>Action </th>*@

                        </tr>
                    </thead>

                    <tbody>

                        @foreach (var v in Model)
                        {
                            <tr class="even pointer">
                                <td>@v.created_at_.ToShortDateString()</td>
                                <td>@v.po_number</td>
                                <td>@v.party_name</td>
                                <td>@v.item</td>
                                <td>@v.broker_name </td>
                                <td>@v.brokers_commision</td>
                                <td>@v.rate</td>
                                <td>@v.prepared_by</td>
                                <td>@v.approved_by</td>
                                <td>@v.weight</td>

                                @if (v.is_active == "Y")
                                {
                                    <td>Active</td>
                                }
                                else
                                {
                                    <td>DeActive</td>
                                }
                                @*<td>
                                    <a href="~/SaleOrder/Edit/@v.Id/">Update</a></td>*@

                            </tr>
                        }


                    </tbody>

                </table>
                <div class="form-group">
                    <a href="~/SaleOrder/Create/" class="btn btn-success">Create</a>
                </div>
            </div>
        </div>
    </div>

    <br />
    <br />
    <br />

</div>










