@model ranglerz_project.Models.Temporary_Orders


<style type="text/css">
    * {
        margin: 0;
        padding: 0;
    }

    .container {
        width: 80%;
        margin: 10px auto;
        position: relative;
        padding: 10px;
        background-color: #fff;
    }

    .text-center {
        text-align: center;
    }

    .container h2 {
        margin-bottom: 5px;
    }

    .date {
        position: absolute;
        top: 10px;
        right: 10px;
    }

    .head {
        width: 300px;
        height: 40px;
        border: 1px solid #000000;
        margin: 10px auto;
        text-align: center;
        line-height: 40px;
        font-weight: bold;
        box-shadow: 4px 4px 4px #000000;
    }

    table {
        width: 100%;
        margin: 20px 0 0;
    }

    .terms {
        width: 450px;
        margin: 80px auto 40px;
    }

    .sub {
        width: 100%;
        height: 150px;
        border: 1px solid #000000;
    }

    .signature {
        width: 20%;
        padding: 20px 30px;
        float: left;
    }

    .signature2 {
        width: 20%;
        padding: 20px 30px;
        float: right;
    }

    hr {
        margin-bottom: 5px;
    }

    .clearfix {
        clear: both;
    }

    .bsig1 {
        width: 23%;
        margin-left: 10px;
        margin-bottom: 10px;
        float: left;
    }
    .mR{
        margin-right:20px;
        margin-bottom:10px;
    }
    .upper{
        text-transform:uppercase;
        font-weight:600;
    }
    td{
        padding:3px;
    }
</style>





    <div class="container">
        <h1 class="text-center">ASIAN INDUSTRIES</h1>
        @*<p class="text-center">21-W Madina Town, Canal Road, Faislabad</p>*@
        <p id="dateDefault" class="date"></p>
        @if (@Model.type == 1)
        {
            <div class="head upper">Sale Contract</div>
        }
        else
        {
            <div class="head upper">Purchase Contract</div>
        }
        <div id="printDiv" >
            <a class="pull-right mR" onclick="printOrder()"><strong>Print</strong></a>
        </div>
        <table cellpadding="0" cellspacing="0" border="1">
            <tbody>
                <tr>
                    @if (@Model.type == 1)
                    {
                        <td class="upper" colspan="7">SO-HO-SO</td>
                    }
                    else
                    {
                        <td class="upper" colspan="7">PO-HO-PO</td>
                    }
                  
                </tr>
                <tr>
                    <td class="upper">Party</td>
                    <td colspan="8">@Model.party_name</td>
                    
               
                </tr>
                <tr>
                    <td class="upper">Broker</td>
                    <td colspan="3">@Model.broker_name</td>
                    <td colspan="3"><strong>CODE :</strong> @Model.order_number</td>
      
                </tr>
                <tr>
                    <td class="upper">Commision</td>
                    <td colspan="3">@Model.brokers_commision</td>
                    <td colspan="3"><strong>DATE :</strong> @Model.created_at_.ToShortDateString()</td>
     

                </tr>
                <tr class="upper" style="border-top:2px solid #000000; height:30px">
                    <td class="text-center" width="14%"><b>No</b></td>
                    <td class="text-center" width="40%"><b>Item Description</b></td>
                    <td class="text-center" width="10%"><b>Category</b></td>
                    <td class="text-center" width="10%"><b>Qty/Weight</b></td>
                    <td class="text-center" width="8%"><b>Bags</b></td>
                    <td class="text-center" width="8%"><b>Rate</b></td>
                    <td class="text-center" width="10%"><b>No of Veh</b></td>
                </tr>
                <tr style="border-bottom:2px solid #000000">
                    <td class="text-center">1</td>
                    @if (@Model.type == 1)
                    {
                        <td>Sale Order of @Model.party_name with good @Model.item</td>
                    }
                    else
                    {
                        <td>Purchase Order of @Model.party_name with good @Model.item</td>
                    }



                    @if (@Model.type == 1)
                    {
                        <td class="text-center">SO</td>
                    }
                    else
                    {
                        <td class="text-center">PO</td>
                    }
                    <td class="text-center">@Model.weight</td>
                    <td class="text-center">@Model.bags</td>
                    <td class="text-center">@Model.rate</td>
                    <td class="text-center">N/A</td>
                </tr>

            </tbody>
        </table>

        

        <div class="terms">
            <h3>Terms & Condition:</h3>
            <div class="sub"><b>@Model.terms</b>  </div>
        </div>

        <div class="signature">
            <hr />
            <p class="text-center">Prepaid By</p>
        </div>
        <div class="signature2">
            <hr />
            <p class="text-center">Signature Vendor Authority</p>
        </div>

        <div class="clearfix"></div>
        <div>&nbsp;</div>
        <div>&nbsp;</div>
        <div>&nbsp;</div>
        <div>&nbsp;</div>

        <div class="bsig1">
            <p>Prepaid By: _____________ </p>
        </div>
        <div class="bsig1">
            <p>Checked By: _____________ </p>
        </div>
        <div class="bsig1">
            <p>Approved By: _____________ </p>
        </div>
        <div class="bsig1">
            <p>Audit By: _____________ </p>
        </div>


        <div class="clearfix"></div>
    </div>


    <script>

            var datetime = new Date().toLocaleString().slice(0, 9) + " " + new Date(new Date()).toString().split(' ')[4];
            document.getElementById("dateDefault").innerHTML = datetime;

            function printOrder()
            {
                document.getElementById("printDiv").style.display = "none";
                window.print();
            }

    </script>
