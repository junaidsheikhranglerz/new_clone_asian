@model ranglerz_project.ModelsBO.RestrictUser

@{
    ViewBag.Title = "All Users";
}










    <div class="container body">


        <div class="main_container">



            @{
                Html.RenderPartial("_Partial");
            }




        
            <div class="right_col col-md-10 pull-right" role="main">
                <div class="">
                    <div class="page-title">
                        <div class="title_left">
                            <h3>
                                User View
                            </h3>
                        </div>


                    </div>
                    <div class="clearfix"></div>

                    <div class="row">

                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="x_panel">
                                <div class="x_title">
                                    <h2> User View List</h2>

                                    <div class="clearfix"></div>
                                </div>
                                <div class="x_content">
                                    <table id="example" class="table table-striped responsive-utilities jambo_table">
                                        <thead>
                                            <tr class="headings">
                                                <th>
                                                    <input type="checkbox" class="tableflat">
                                                </th>
                                                <th>Name </th>
                                                <th>Username </th>
                                                <th>Password </th>
                                                <th>Creation time </th>
                                                <th>Status </th>
                                                @if (@Model.edit == "Y")
                                                {
                                                    <th>Action </th>
                                                }
                                                @if (@Model.delete == "Y")
                                                {
                                                    <th class=" no-link last">
                                                        <span class="nobr">Action</span>
                                                    </th>
                                                }
                                            </tr>
                                        </thead>

                                        <tbody>


                                            @foreach (var v in @Model.allusers)
                                            {
                                                <tr class="even pointer">
                                                    <td class="a-center ">
                                                        <input type="checkbox" class="tableflat">
                                                    </td>
                                                    <td class=" ">@v.name</td>
                                                    <td class=" ">@v.username </td>
                                                    <td class=" ">
                                                        @v.password
                                                    </td>
                                                    <td class=" ">@v.created_at</td>
                                                    @if (@v.is_active == "Y")
                                                    {
                                                        <td class=" ">Active</td>
                                                    }
                                                    @if (@v.is_active == "N")
                                                    {
                                                        <td class=" ">Deactive</td>
                                                    }
                                                    @if (@Model.edit == "Y")
                                                    {
                                                        <td>
                                                            <a href="~/USER_CRUD/Edit/@v.Id/">Update</a>
                                                        </td>
                                                    }

                                                    @if (@Model.delete == "Y")
                                                    {
                                                        <td class=" last">
                                                            <a href="~/USER_CRUD/Delete/@v.Id/">Delete</a>
                                                        </td>
                                                    }
                                                </tr>
                                            }


                                        </tbody>

                                    </table>
                                </div>
                            </div>
                        </div>

                        <br />
                        <br />
                        <br />

                    </div>
                </div>

            </div>
            <!-- /page content -->
        </div>

    </div>

