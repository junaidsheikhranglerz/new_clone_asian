@model ranglerz_project.Models.User







    <div class="container body">


        <div class="main_container">

            @{
                Html.RenderPartial("_Partial");
            }

            <div class="right_col col-md-10 pull-right" role="main">
                <div class="">



                    <div class="page-title">
                        <div class="title_left">
                            <h3>Add Expense Reports Permissions</h3>
                        </div>

                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">

                            <div class="x_content">
                                <br />


                                <form id="demo-form2" action="@Url.Action("ExpenseReports","USER_CRUD",new {id = @Model.Id })" method="post" data-parsley-validate class="form-horizontal form-label-left" new { enctype="multipart/form-data" }>

                                    <!---->


                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Accounts Permissions</label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">

                                        <div id="gender" class="btn-group" style="margin-top:8px;">




                                            @foreach (var name in ViewBag.AllAccounts)
                                            {

                                                int count = 0;

                                                if (ViewBag.Permissions.Count != 0)
                                                {
                                                    count = 0;

                                                    foreach (var permit in ViewBag.Permissions)
                                                    {

                                                        if (permit.account_name == name.name)
                                                        {
                                                            count++;
                                                            break;
                                                        }

                                                    }
                                                }
                                                if (count == 1)
                                                {
                                                    <input type="checkbox" name="@name.name" checked value="@name.id"><label>@name.name</label>
                                                }
                                                else
                                                {
                                                    <input type="checkbox" name="@name.name" value="@name.id"><label>@name.name</label>
                                                }

                                            }






                                        </div>
                                    </div>










                                    <!---->

                                    <div class="ln_solid"></div>
                                    <div class="form-group">
                                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">

                                            <input type="submit" value="Update" class="btn btn-success" />
                                        </div>
                                    </div>

                                </form>



                            </div>
                        </div>
                    </div>
                </div>
            </div>
  

        </div>

    </div>

